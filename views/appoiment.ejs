<div class="album py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% rep.forEach((post) => { %>
            <div class="col">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><strong> Doctors name:</strong> <%= post.Doc_name%></h5>
                        <p class="card-text"><strong>Description:</strong> <%= post.desc %></p>
                        <p class="card-text"><strong>Date:</strong> <%= post.report_time %></p>
                        <p class="card-text"><strong>Time:</strong> <%= post.report_time %></p>
                        <form action="/app_remove" method="post">
                            <button type="submit" value="<%= post._id %>" name="remove" class="btn btn-primary">Remove</button>
                        </form>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
  </div>
  
